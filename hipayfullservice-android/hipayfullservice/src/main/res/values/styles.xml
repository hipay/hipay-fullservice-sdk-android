<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Exists for inheritance purposes -->
    <style name="PaymentScreens" parent="PaymentScreens.Base" />

    <style name="PaymentScreens.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/hpf_primary</item>
        <item name="colorPrimaryDark">@color/hpf_primary_dark</item>
        <item name="colorAccent">@color/hpf_accent</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorPrimaryInverse">@color/hpf_light</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/hpf_primary_dark</item>
        <item name="android:textColor">@color/hpf_text</item>

        <item name="android:windowBackground">@color/light_grey</item>
        <item name="android:colorBackground">@color/light_grey</item>
    </style>

    <style name="PaymentScreens.PaymentProductsActivity" />
    <style name="PaymentScreens.PaymentFormActivity" />

    <style name="PaymentScreens.Blue">
        <item name="colorPrimary">@color/theme_blue_primary</item>
        <item name="colorPrimaryDark">@color/theme_blue_primary_dark</item>
        <item name="android:textColorPrimary">@color/theme_blue_text</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">
            @color/theme_blue_primary_dark
        </item>
        <item name="android:windowBackground">@color/theme_blue_background</item>
        <item name="colorAccent">@color/theme_blue_accent</item>
    </style>

    <style name="PaymentScreens.Green">
        <item name="colorPrimary">@color/theme_green_primary</item>
        <item name="colorPrimaryDark">@color/theme_green_primary</item>
        <item name="android:textColorPrimary">@color/theme_green_text</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">
            @color/theme_green_primary_dark
        </item>
        <item name="android:windowBackground">@color/theme_green_background</item>
        <item name="colorAccent">@color/theme_green_accent</item>
    </style>

    <style name="PaymentScreens.Red">
        <item name="colorPrimary">@color/theme_red_primary</item>
        <item name="colorPrimaryDark">@color/theme_red_primary</item>
        <item name="android:textColorPrimary">@color/theme_red_text</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">
            @color/theme_red_primary_dark
        </item>
        <item name="android:windowBackground">@color/theme_red_background</item>
        <item name="colorAccent">@color/theme_red_accent</item>
    </style>

    <style name="PaymentScreens.CompoundButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/selector_button</item>
        <item name="android:button">@null</item>
    </style>

    <style name="PaymentScreens.CompoundButton.Radio" parent="PaymentScreens.CompoundButton">
        <item name="android:background">@drawable/selector_checkable</item>
    </style>

    <style name="PaymentScreens.CompoundButton.True" parent="PaymentScreens.CompoundButton">
        <item name="android:background">@drawable/selector_true</item>
    </style>

    <style name="PaymentScreens.CompoundButton.False" parent="PaymentScreens.CompoundButton">
        <item name="android:background">@drawable/selector_false</item>
    </style>

    <style name="PaymentScreens.TextAppearance" />

    <style name="PaymentScreens.TextAppearance.PaymentProductItem" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">@dimen/payment_product_item_text_size</item>
    </style>

    <style name="PaymentScreens.TextAppearance.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/hpf_primary</item>
    </style>

    <style name="PaymentScreens.TextAppearance.Title.Inverse" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/hpf_light</item>
    </style>

    <style name="PaymentScreens.TextAppearance.Title.Picker" parent="PaymentScreens.TextAppearance.Title">
        <item name="android:textSize">96sp</item>
    </style>

    <style name="PaymentScreens.TextAppearance.Subhead" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@color/hpf_primary</item>
    </style>

    <style name="PaymentScreens.TextAppearance.ListItem" parent="TextAppearance.AppCompat.Subhead" />
    <style name="PaymentScreens.TextAppearance.ListItemSecondary" parent="TextAppearance.AppCompat.Body1" />

</resources>
